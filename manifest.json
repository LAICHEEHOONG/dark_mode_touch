{
    "manifest_version": 2,
    "name": "Dark Mode Touch",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "main.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "touch16.png",
        "48": "touch48.png",
        "128": "touch128.png"
    },
    "browser_action": {
        "default_icon": "touch128.png"
    },
    "web_accessible_resources": [
        "sound.mp3"
    ]
}